<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.locateshop.VendorPost">

    <Button
        android:id="@+id/postimagebtn"
        android:layout_width="344dp"
        android:layout_height="77dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="192dp"
        android:layout_marginEnd="116dp"
        android:text="POST YOUR PRODUCT"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/select_product_image"
        android:layout_width="509dp"
        android:layout_height="389dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="82dp"
        app:srcCompat="@drawable/select_image" />

    <EditText
        android:id="@+id/postdetails"
        android:layout_width="478dp"
        android:layout_height="111dp"
        android:layout_alignEnd="@+id/select_product_image"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="318dp"
        android:ems="10"
        android:hint="ITEM DETAILS"
        android:inputType="textPersonName"
        android:singleLine="false"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

</RelativeLayout>
