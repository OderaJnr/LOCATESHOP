<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cartcustom_profile_image"
        android:layout_width="81dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="17dp"
        android:cropToPadding="true"
        android:src="@drawable/profile"
        tools:ignore="RtlCompat" />


    <TextView
        android:id="@+id/cartcustom_profile_name"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:text="Display Username"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />


    <TextView
        android:id="@+id/cartcustom_user_ordernumber"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="59dp"
        android:text="Order ID"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/cartcustom_user_phonenumber"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/cartcustom_user_ordernumber"
        android:layout_marginStart="205dp"
        android:text="Contacts"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/cartcustom_user_location"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cartcustom_user_ordernumber"
        android:layout_toStartOf="@+id/cartcustom_profile_image"
        android:text="Location"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        tools:ignore="RtlCompat" />

</RelativeLayout>