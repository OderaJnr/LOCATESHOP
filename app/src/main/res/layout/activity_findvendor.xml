<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/background_light"
    tools:context="com.example.user.locateshop.FindvendorActivity">

    <include
        android:id="@+id/search_page_toolbar"
        layout="@layout/app_bar_layout"

        ></include>


    <RelativeLayout
        android:id="@+id/mylayout"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp">


        <EditText
            android:id="@+id/search_productbtn"
            style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/searchbyproducttv"
            android:layout_marginBottom="57dp"
            android:ems="10"
            android:hint="Search by username..."
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="serif"
            tools:background="?android:attr/colorButtonNormal" />

        <ImageButton
            android:id="@+id/search_people_button"
            android:layout_width="95dp"
            android:layout_height="67dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/search_productbtn"
            android:layout_marginEnd="77dp"
            app:srcCompat="@drawable/search" />

        <TextView
            android:id="@+id/searchbyproducttv"
            android:layout_width="313dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="97dp"
            android:text="Tap here to search by product name"
            android:textAlignment="center"
            android:textSize="18sp" />


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_result_list"
        android:layout_width="match_parent"
        android:layout_height="707dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
   >

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
