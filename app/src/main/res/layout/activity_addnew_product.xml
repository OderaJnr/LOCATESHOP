<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.locateshop.AddnewProductActivity">

    <include
        android:id="@+id/addproduct_page_toolbar"
        layout="@layout/app_bar_layout"

        ></include>

    <ImageView
        android:id="@+id/select_product_image3"
        android:layout_width="219dp"
        android:layout_height="189dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="348dp"
        app:srcCompat="@drawable/select_image" />

    <ImageView
        android:id="@+id/select_product_image2"
        android:layout_width="236dp"
        android:layout_height="210dp"
        android:layout_alignBottom="@+id/select_product_image"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        app:srcCompat="@drawable/select_image" />

    <ImageView
        android:id="@+id/select_product_image"
        android:layout_width="272dp"
        android:layout_height="208dp"
        android:layout_above="@+id/select_product_image3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-348dp"
        android:layout_marginStart="23dp"
        app:srcCompat="@drawable/select_image" />


    <EditText
        android:id="@+id/product_name"
        android:layout_width="327dp"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="336dp"
        android:ems="10"
        android:hint="product name"
        android:inputType="textPersonName"
        android:singleLine="false"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <EditText
        android:id="@+id/product_description"
        android:layout_width="327dp"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/product_name"
        android:layout_marginBottom="254dp"
        android:ems="10"
        android:hint="Describe your product"
        android:inputType="textPersonName"
        android:singleLine="false"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />


    <EditText
        android:id="@+id/product_price"
        android:layout_width="327dp"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/product_name"
        android:layout_marginBottom="170dp"
        android:ems="10"
        android:hint="Product Price"
        android:inputType="textPersonName"
        android:singleLine="false"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <Button
        android:id="@+id/add_product_button"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/select_product_image3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="94dp"
        android:background="@color/colorPrimary"
        android:text="Add Product"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="251dp"
        android:layout_height="47dp"
        android:layout_above="@+id/select_product_image2"
        android:layout_centerHorizontal="true"
        android:text="Add Product Details"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp"
        android:textStyle="bold" />


</RelativeLayout>
